pipeline {
    agent any

    environment {
        IMAGE = "khushijain191/wine-inference-api:v1"
        CONTAINER = "wine_ci_test"
    }

    stages {

        stage('Pull Image') {
            steps {
                sh 'docker pull $IMAGE'
            }
        }

        stage('Run Container') {
            steps {
                sh '''
                docker rm -f $CONTAINER || true
                docker run -d -p 8002:8000 --name $CONTAINER $IMAGE
                '''
            }
        }
        stage('Wait for API Readiness') {
            steps {
                sh '''
                echo "Waiting for API to start..."
        
                i=0
                while [ $i -lt 30 ]
                do
                  if docker logs $CONTAINER 2>&1 | grep -q "Uvicorn running"; then
                    echo "API is ready"
                    exit 0
                  fi
                  sleep 2
                  i=$((i+1))
                done
        
                echo "API did not start"
                docker logs $CONTAINER
                exit 1
                '''
            }
        }

        stage('Valid Inference Test') {
            steps {
                sh '''
                echo "Sending valid inference request..."

                RESPONSE=$(curl -s -X POST \
                "http://localhost:8002/predict?fixed_acidity=7.4&volatile_acidity=0.7&citric_acid=0.0&residual_sugar=1.9&chlorides=0.076&free_sulfur_dioxide=11&total_sulfur_dioxide=34&density=0.9978&pH=3.51&sulphates=0.56&alcohol=9.4")

                echo "Valid Response:"
                echo $RESPONSE

                echo $RESPONSE | grep prediction
                '''
            }
        }

        stage('Invalid Input Test') {
            steps {
                sh '''
                echo "Sending invalid request..."

                RESPONSE=$(curl -s -X POST \
                "http://localhost:8002/predict")

                echo "Invalid Response:"
                echo $RESPONSE

                echo $RESPONSE | grep detail
                '''
            }
        }

        stage('Stop Container') {
            steps {
                sh 'docker rm -f $CONTAINER'
            }
        }
    }

    post {
        always {
            sh 'docker rm -f $CONTAINER || true'
        }
    }
}
