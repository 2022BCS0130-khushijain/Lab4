pipeline {
    agent any

    environment {
        IMAGE = "khushijain191/wine-inference-api:v1"
        CONTAINER = "wine_ci_test"
    }

    stages {

        stage('Pull Image') {
            steps {
                sh 'docker pull $IMAGE'
            }
        }

        stage('Run Container') {
            steps {
                sh '''
                docker rm -f $CONTAINER || true
                docker run -d --name $CONTAINER $IMAGE
                '''
            }
        }

        stage('Wait for API Readiness') {
            steps {
                sh '''
                echo "Waiting for API to start..."

                for i in {1..30}; do
                  if docker exec $CONTAINER curl -s http://localhost:8000/docs > /dev/null 2>&1; then
                    echo "API running on port 8000"
                    exit 0
                  fi

                  if docker exec $CONTAINER curl -s http://localhost:80/docs > /dev/null 2>&1; then
                    echo "API running on port 80"
                    exit 0
                  fi

                  sleep 2
                done

                echo "API did not start"
                docker logs $CONTAINER
                exit 1
                '''
            }
        }

        stage('Valid Inference Test') {
            steps {
                sh '''
                echo "Sending valid inference request..."

                RESPONSE=$(docker exec $CONTAINER curl -s -X POST http://localhost:8000/predict \
                -H "Content-Type: application/json" \
                -d @valid.json 2>/dev/null || \
                docker exec $CONTAINER curl -s -X POST http://localhost:80/predict \
                -H "Content-Type: application/json" \
                -d @valid.json)

                echo "Valid Response:"
                echo $RESPONSE

                echo $RESPONSE | grep prediction
                '''
            }
        }

        stage('Invalid Input Test') {
            steps {
                sh '''
                echo "Sending invalid request..."

                RESPONSE=$(docker exec $CONTAINER curl -s -X POST http://localhost:8000/predict \
                -H "Content-Type: application/json" \
                -d @invalid.json 2>/dev/null || \
                docker exec $CONTAINER curl -s -X POST http://localhost:80/predict \
                -H "Content-Type: application/json" \
                -d @invalid.json)

                echo "Invalid Response:"
                echo $RESPONSE

                echo $RESPONSE | grep detail
                '''
            }
        }

        stage('Stop Container') {
            steps {
                sh 'docker rm -f $CONTAINER'
            }
        }
    }

    post {
        always {
            sh 'docker rm -f $CONTAINER || true'
        }
    }
}
